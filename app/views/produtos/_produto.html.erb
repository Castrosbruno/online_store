
  <tr>
    <td><%= produto.nome %></td>
    <td><%= produto.descricao %></td>
    <td><%= produto.departamento.nome %></td>
    <td><%= ' R$ ' +  produto.preco.to_s %></td>
    <td><%= produto.quantidade %></td>
    <td><%= link_to "Editar", edit_produto_path(produto), class:"btn btn-default"%></td>
    <td><%= button_to "Excluir", produto, method: :delete, class:"btn btn-danger", data: {confirm: "Tem certeza que deseja excluir o produto #{produto.nome}?"} %></td>
  </tr>
